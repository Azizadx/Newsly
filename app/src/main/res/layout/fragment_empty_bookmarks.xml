<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.EmptyBookmarks">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_saved_articles"
            android:layout_centerInParent="true"
            ></ImageView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=" You haven't saved any articles \n yet. Start reading and \n bookmarking them now"
            android:textColor="@color/primary_light_green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView"
            >

        </TextView>



    </RelativeLayout>

</FrameLayout>